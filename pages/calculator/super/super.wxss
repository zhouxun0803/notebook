.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.keyboard {
  width: 100vw;
}

.key-rows {
  display: flex;
  width: 100vw;
}

.key {
  width: 25vw;
}

.key button {
  margin: 0.5vh 1vw;
  height: 8.6vh;
  line-height: 8.6vh;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx !important;
}

.screen {
  width: 98vw;
  height: 38vh;
  margin: 1vh 1vw;
  padding: 1vh 1.4vw;
  border: 1px solid #353535;
  box-sizing: border-box;
  border-radius: 4px;
}

.screen button {
  text-align: right !important;
  margin: 0 !important;
  line-height: 1.4vh !important;
  height: 3.6vh !important;
  border: none !important;
  color: #999 !important;
  width: 100% !important;
  font-size: 6vw !important;
  padding: 13rpx 20rpx !important;
}

.screen .current {
  color: #000 !important;
  font-size: 7vw !important;
}