.content {
  width: 100%;
  height: 100vh;
}

.bgImg,
.box,
.mask {
  width: 100%;
  height: 100%;
}

.box {
  position: fixed;
  top: 0;
  z-index: 99;
}

.grade {
  position: absolute;
  top: 150rpx;
  margin-left: 170rpx;
  font-size: 70rpx;
  color: #ff5e00;
  font-weight: bold;
}

.grade-img {
  background: transparent;
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
}

.item {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #fff;
  opacity: 0.8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border: 4rpx solid;
  position: absolute;
  top: 30%;
}

.item:nth-of-type(1) {
  transform: translate(50rpx, 100rpx);
  border-color: #07c160;
  color: #07c160;
}

.item:nth-of-type(2) {
  transform: translate(200rpx, 0rpx);
  border-color: #0a07c1;
  color: #0a07c1;
}

.item:nth-of-type(3) {
  transform: translate(300rpx, 200rpx);
  border-color: #f70223;
  color: #f70223;
}

.item:nth-of-type(4) {
  transform: translate(500rpx, 100rpx);
  border-color: #ff7300;
  color: #ff7300;
}

.item:nth-of-type(5) {
  transform: translate(600rpx, -100rpx);
  border-color: #ae00ff;
  color: #ae00ff;
}

.mask {
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  z-index: 999;
}

.dialog {
  width: 80%;
  height: 350rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  transform: translateX(-50%);
}

.close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 34rpx;
}

.dialog-con {
  margin-top: 80rpx;
  flex-direction: column;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.num {
  font-size: 50rpx;
  text-align: center;
}

.dialog-con input {
  width: 100%;
  margin-top: 10rpx;
  font-size: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid;
  height: 70rpx;
}

.dialog-con button {
  margin-top: 30rpx;
}